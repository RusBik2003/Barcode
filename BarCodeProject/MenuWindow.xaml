<Window x:Class="BarCodeProject.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BarCodeProject"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="MenuWindow" Height="220" Width="400">
    <Grid Background="Black">
        <StackPanel>
            <Button Name="CreateBarcodeWindowTransition" Width="400" Height="40" Content="Создание штрих кодов" Margin="10" Click="CreateBarcodeWindowTransition_Click"></Button>
            <Button Name="ReadBarcodeWindowTransition" Width="400" Height="40" Content="Чтение штрих кодов" Margin="10" Click="ReadBarcodeWindowTransition_Click"></Button>
            <Button Name="WindowMenuClose" Width="400" Height="40" Content="Выход" Margin="10" Click="WindowMenuClose_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
